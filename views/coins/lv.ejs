<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title><%= settings.name %> - Linkvertise</title>
    <link rel="icon" type="image/png" href="https://i.imgur.com/GY3cXet.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.3s ease-out forwards;
        }
        .shadow-glow {
            box-shadow: 0 0 15px rgba(99, 102, 241, 0.3);
        }
        .gradient-text {
            background: linear-gradient(45deg, #6366f1, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .purple-pink-gradient {
            background: linear-gradient(45deg, #8b5cf6, #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .bg-grid {
            background-image: radial-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px);
            background-size: 20px 20px;
        }
        .card-hover:hover {
            transform: translateY(-3px);
        }
        .btn-glow:hover {
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
        }
    </style>
</head>
<body class="bg-black text-white min-h-screen">
    <div class="flex">
        <!-- Sidebar -->
        <%- include('../components/navigation') %>
        
        <!-- Main Content -->
        <main class="flex-1 ml-72 p-8">
            <!-- Header Section -->
            <div class="relative rounded-2xl overflow-hidden mb-8 animate-fade-in shadow-glow">
                <div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 to-pink-600/20 backdrop-blur-sm bg-grid"></div>
                <div class="relative p-8">
                    <h1 class="text-4xl font-bold mb-2 purple-pink-gradient">Linkvertise</h1>
                    <p class="text-gray-300">Complete Linkvertise links to earn extra coins for your account.</p>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Completed Links -->
                <div class="bg-gray-900/80 border border-purple-500/20 rounded-xl p-6 hover:bg-gray-900/90 transition-all duration-300 animate-fade-in card-hover shadow-lg">
                    <div class="flex items-center justify-center mb-4">
                        <div class="w-16 h-16 rounded-full bg-purple-500/10 flex items-center justify-center">
                            <i class="fas fa-link text-purple-500 text-2xl"></i>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold purple-pink-gradient mb-2" id="completedLinks">0</div>
                        <p class="text-gray-400">Links Completed Today</p>
                    </div>
                </div>
                
                <!-- Coins Earned -->
                <div class="bg-gray-900/80 border border-yellow-500/20 rounded-xl p-6 hover:bg-gray-900/90 transition-all duration-300 animate-fade-in card-hover shadow-lg">
                    <div class="flex items-center justify-center mb-4">
                        <div class="w-16 h-16 rounded-full bg-yellow-500/10 flex items-center justify-center">
                            <i class="fas fa-coins text-yellow-500 text-2xl"></i>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-yellow-500 mb-2" id="coinsEarned">0</div>
                        <p class="text-gray-400"><%= settings.coinname %> Earned Today</p>
                    </div>
                </div>
                
                <!-- Reward Per Link -->
                <div class="bg-gray-900/80 border border-green-500/20 rounded-xl p-6 hover:bg-gray-900/90 transition-all duration-300 animate-fade-in card-hover shadow-lg">
                    <div class="flex items-center justify-center mb-4">
                        <div class="w-16 h-16 rounded-full bg-green-500/10 flex items-center justify-center">
                            <i class="fas fa-gift text-green-500 text-2xl"></i>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-green-500 mb-2"><%= settings.linkvertise.coins %></div>
                        <p class="text-gray-400"><%= settings.coinname %> Per Link</p>
                    </div>
                </div>
            </div>

            <!-- Main Link Generation Card -->
            <div class="bg-gray-900/80 border border-purple-500/20 rounded-xl p-6 mb-8 animate-fade-in shadow-lg">
                <div class="text-center mb-8">
                    <h2 class="text-2xl font-bold purple-pink-gradient mb-4">Generate Linkvertise Link</h2>
                    <p class="text-gray-300 max-w-2xl mx-auto">Complete Linkvertise links to earn coins that can be used to purchase server resources, renewals, and more.</p>
                </div>
                
                <div class="flex flex-col items-center justify-center">
                    <div class="relative w-full max-w-md">
                        <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl blur opacity-20"></div>
                        <div class="relative bg-gray-800/90 rounded-xl p-8 shadow-xl">
                            <div class="flex justify-center mb-6">
                                <div class="w-20 h-20 rounded-full bg-purple-500/10 flex items-center justify-center">
                                    <i class="fas fa-link text-purple-500 text-3xl"></i>
                                </div>
                            </div>
                            
                            <div class="text-center mb-6">
                                <h3 class="text-xl font-semibold mb-2">Ready to earn?</h3>
                                <p class="text-gray-400 text-sm">Click the button below to generate a new Linkvertise link</p>
                            </div>
                            
                            <a href="./lv/gen" target="_blank" class="block w-full py-4 rounded-xl bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold text-center transition-all duration-300 btn-glow">
                                <i class="fas fa-external-link-alt mr-2"></i> Generate Link
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- How It Works -->
            <div class="bg-gray-900/80 border border-indigo-500/20 rounded-xl overflow-hidden animate-fade-in shadow-lg">
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-6 gradient-text">How It Works</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="bg-gray-800/80 rounded-xl p-5 hover:bg-gray-800/90 transition-all duration-300">
                            <div class="w-12 h-12 rounded-xl bg-indigo-500/10 flex items-center justify-center mb-4 mx-auto">
                                <span class="text-indigo-400 font-bold text-xl">1</span>
                            </div>
                            <h4 class="text-lg font-semibold text-center mb-2 text-indigo-400">Generate Link</h4>
                            <p class="text-sm text-gray-400 text-center">Click the "Generate Link" button to create a new Linkvertise link.</p>
                        </div>
                        
                        <div class="bg-gray-800/80 rounded-xl p-5 hover:bg-gray-800/90 transition-all duration-300">
                            <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center mb-4 mx-auto">
                                <span class="text-purple-400 font-bold text-xl">2</span>
                            </div>
                            <h4 class="text-lg font-semibold text-center mb-2 text-purple-400">Complete Process</h4>
                            <p class="text-sm text-gray-400 text-center">Follow the steps on Linkvertise to complete the verification process.</p>
                        </div>
                        
                        <div class="bg-gray-800/80 rounded-xl p-5 hover:bg-gray-800/90 transition-all duration-300">
                            <div class="w-12 h-12 rounded-xl bg-pink-500/10 flex items-center justify-center mb-4 mx-auto">
                                <span class="text-pink-400 font-bold text-xl">3</span>
                            </div>
                            <h4 class="text-lg font-semibold text-center mb-2 text-pink-400">Receive Reward</h4>
                            <p class="text-sm text-gray-400 text-center">Get <%= settings.linkvertise.coins %> <%= settings.coinname %> credited to your account instantly.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Initialize Linkvertise Data
        document.addEventListener('DOMContentLoaded', function() {
            // These values would typically come from your server
            // Replace with actual API calls or server data
            document.getElementById("completedLinks").textContent = "0";
            document.getElementById("coinsEarned").textContent = "0";
            
            // Check for URL parameters to show success message
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('success') === 'true') {
                showNotification('Success! You earned <%= settings.linkvertise.coins %> <%= settings.coinname %>!', 'success');
            }
        });
        
        // Notification function
        function showNotification(message, type) {
            const notificationContainer = document.createElement('div');
            notificationContainer.className = `fixed top-6 right-6 z-50 p-4 rounded-lg shadow-lg animate-fade-in ${
                type === 'success' ? 'bg-green-500/90' : 'bg-red-500/90'
            }`;
            
            const content = document.createElement('div');
            content.className = 'flex items-center';
            
            const icon = document.createElement('i');
            icon.className = `fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} text-white mr-3`;
            
            const text = document.createElement('span');
            text.className = 'text-white';
            text.textContent = message;
            
            content.appendChild(icon);
            content.appendChild(text);
            notificationContainer.appendChild(content);
            
            document.body.appendChild(notificationContainer);
            
            setTimeout(() => {
                notificationContainer.style.opacity = '0';
                setTimeout(() => {
                    document.body.removeChild(notificationContainer);
                }, 300);
            }, 3000);
        }
    </script>
</body>
</html>