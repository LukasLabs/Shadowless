<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Earn - <%= settings.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.3s ease-out forwards;
        }
    </style>
</head>
<body class="bg-[#0F0F0F] text-white min-h-screen">
    <div class="flex">
        <!-- Sidebar -->
        <%- include('../components/navigation') %>
        
        <!-- Main Content -->
        <main class="flex-1 ml-72 p-8">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold mb-2">AFK Page</h1>
                    <p class="text-gray-400">Earn free rewards for keeping this page open</p>
                </div>
                <div class="flex items-center space-x-3 p-3 rounded-xl bg-[#1A1A1A]">
                    <i class="fas fa-coins text-yellow-500"></i>
                    <span class="font-medium"><%= coins %> <%= settings.api.client.coins.name %></span>
                </div>
            </div>

            <!-- AFK Content -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- AFK Timer Card -->
                <div class="bg-[#1A1A1A] rounded-xl p-6 animate-fade-in">
                    <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center mb-4">
                        <i class="fas fa-clock text-blue-500 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-bold mb-2">AFK Timer</h2>
                    <p class="text-gray-400 mb-6">Earn <%= settings.coinname %> for free, by leaving this page open.</p>
                    
                    <div class="flex space-x-4 mb-6">
                        <div class="flex-1 p-4 rounded-xl bg-[#242424]">
                            <div class="text-2xl font-bold text-blue-500" id="afk-time">0</div>
                            <div class="text-sm text-gray-400">Seconds</div>
                        </div>
                        <div class="flex-1 p-4 rounded-xl bg-[#242424]">
                            <div class="text-2xl font-bold text-yellow-500" id="sessionEarn">0</div>
                            <div class="text-sm text-gray-400">Coins Earned</div>
                        </div>
                    </div>

                    <div class="text-sm text-gray-400">
                        <i class="fas fa-info-circle mr-2"></i>
                        You earn <%= settings.api.afk.coins %> coins per minute while AFK
                    </div>
                </div>

                <!-- Linkvertise Card -->
                <div class="bg-[#1A1A1A] rounded-xl p-6 animate-fade-in">
                    <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center mb-4">
                        <i class="fas fa-link text-purple-500 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-bold mb-2">Linkvertise</h2>
                    <p class="text-gray-400 mb-4">Complete Linkvertise links to earn additional coins</p>
                    
                    <div class="mb-6">
                        <div class="text-2xl font-bold text-purple-500 mb-2" id="usedToday">0</div>
                        <p class="text-sm text-gray-400">Links completed today</p>
                    </div>

                    <div class="space-y-4">
                        <div class="flex items-center space-x-2 text-gray-400">
                            <i class="fas fa-coins text-yellow-500"></i>
                            <span>Earn <%= settings.linkvertise.coins %> <%= settings.coinname %> per link</span>
                        </div>
                        <a href="./lv" target="_blank" class="block w-full py-3 rounded-xl bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white font-semibold text-center transition-all duration-300 shadow-lg hover:shadow-purple-500/20">
                            Go to Linkvertise
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // WebSocket Connection
        const coinsPerMinute = '<%= settings.api.afk.coins %>';
        let totalCoins = 0;
        let afkTime = 0;

        function connect() {
            const socket = new WebSocket(`${window.location.href.startsWith("https://") ? "wss" : "ws"}://${window.location.host}/earn/ws`);

            socket.onopen = () => {
                console.log("WebSocket connection opened");
            };

            socket.onmessage = (event) => {
                let data = JSON.parse(event.data);
                if (data.type === "coin") {
                    totalCoins += parseInt(coinsPerMinute, 10);
                    document.getElementById("sessionEarn").innerText = `${totalCoins}`;
                }
            };

            socket.onclose = (event) => {
                document.getElementById("sessionEarn").innerText = `Connection closed`;
                if (event.wasClean) {
                    console.error(`WebSocket connection closed cleanly, code=${event.code}`);
                } else {
                    console.error('WebSocket connection closed abruptly');
                }
                setTimeout(connect, 5000);
            };
        }

        // AFK Timer
        let afkInterval = setInterval(() => {
            afkTime++;
            document.getElementById("afk-time").textContent = `${afkTime}`;
        }, 1000);

        connect();
    </script>
</body>
</html>