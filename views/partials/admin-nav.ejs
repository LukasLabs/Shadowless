<!-- Admin Sidebar -->
<nav class="fixed left-0 top-0 h-screen w-72 bg-[#0F0F0F] border-r border-[#1A1A1A]">
    <div class="flex flex-col h-full">
        <!-- Logo and Brand -->
        <div class="p-6 border-b border-[#1A1A1A]">
            <div class="flex items-center space-x-3">
                <img class="w-8 h-8 rounded-lg" src="<%= settings.logo %>" alt="Logo">
                <span class="text-xl font-semibold text-white"><%= settings.name %></span>
            </div>
        </div>

        <!-- Admin Profile -->
        <div class="p-4 border-b border-[#1A1A1A]">
            <div class="flex items-center space-x-3 p-3 rounded-xl bg-gradient-to-r from-[#1A1A1A] to-[#242424] hover:from-[#242424] hover:to-[#2A2A2A] transition-all duration-300 shadow-lg">
                <img class="w-10 h-10 rounded-full ring-2 ring-red-500/20" src="https://cdn.discordapp.com/avatars/<%= req.session.userinfo.id%>/<%= req.session.userinfo.avatar%>.jpg?size=1024" alt="User avatar">
                <div>
                    <div class="font-medium text-white"><%= req.session.userinfo.username%></div>
                    <div class="text-sm text-gray-400 flex items-center">
                        <i class="fas fa-shield-alt text-red-500 mr-1"></i>
                        Administrator
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Navigation Links -->
        <div class="flex-1 p-4 space-y-2 overflow-y-auto">
            <a href="/admin" class="flex items-center space-x-3 p-3 rounded-xl transition-all duration-300 shadow-lg <%= req.path === '/admin' ? 'text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 hover:shadow-red-500/20' : 'text-gray-300 hover:text-white hover:bg-[#1A1A1A]' %>">
                <i class="fas fa-home w-5 h-5"></i>
                <span>Dashboard</span>
            </a>

            <a href="/admin/users" class="flex items-center space-x-3 p-3 rounded-xl transition-all duration-300 shadow-lg <%= req.path === '/admin/users' ? 'text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 hover:shadow-red-500/20' : 'text-gray-300 hover:text-white hover:bg-[#1A1A1A]' %>">
                <i class="fas fa-users w-5 h-5 group-hover:text-blue-500 transition-colors duration-300"></i>
                <span>Users</span>
            </a>

            <a href="/admin/servers" class="flex items-center space-x-3 p-3 rounded-xl transition-all duration-300 shadow-lg <%= req.path === '/admin/servers' ? 'text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 hover:shadow-red-500/20' : 'text-gray-300 hover:text-white hover:bg-[#1A1A1A]' %>">
                <i class="fas fa-server w-5 h-5 group-hover:text-purple-500 transition-colors duration-300"></i>
                <span>Servers</span>
            </a>

            <a href="/admin/settings" class="flex items-center space-x-3 p-3 rounded-xl transition-all duration-300 shadow-lg <%= req.path === '/admin/settings' ? 'text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 hover:shadow-red-500/20' : 'text-gray-300 hover:text-white hover:bg-[#1A1A1A]' %>">
                <i class="fas fa-cog w-5 h-5 group-hover:text-green-500 transition-colors duration-300"></i>
                <span>Settings</span>
            </a>
        </div>

        <!-- Back to User Panel -->
        <div class="p-4 border-t border-[#1A1A1A]">
            <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-xl text-blue-400 hover:text-blue-300 hover:bg-blue-500/10 transition-all duration-300 group">
                <i class="fas fa-arrow-left w-5 h-5 group-hover:-translate-x-1 transition-transform duration-300"></i>
                <span>Back to User Panel</span>
            </a>
        </div>
    </div>
</nav> 