<!-- index.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= settings.name %></title>
    <link rel="icon" type="image/png" href="https://i.imgur.com/GY3cXet.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap');
        
        * {
            font-family: 'Plus Jakarta Sans', sans-serif;
        }
        
        body {
            background-color: #0b0b0b;
            color: #f5f5f5;
        }
        
        .purple-accent {
            color: #8b5cf6;
        }
        
        .btn-purple {
            background-color: #8b5cf6;
            transition: all 0.2s ease;
        }
        
        .btn-purple:hover {
            background-color: #7c3aed;
        }
        
        .card {
            background-color: #111111;
            border: 1px solid #222222;
            transition: all 0.3s ease;
        }
        
        .card:hover {
            border-color: #7c3aed;
        }
        
        .subtle-shadow {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body class="min-h-screen">
    <main class="max-w-4xl mx-auto px-4 py-16 md:py-24">
        <!-- Hero Section -->
        <section class="mb-24 text-center">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white tracking-tight">
                Welcome to <span class="purple-accent"><%= settings.name %></span>
            </h1>
            <p class="text-xl text-gray-400 mb-10 max-w-2xl mx-auto">
                Next-generation Minecraft server hosting with unparalleled performance
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                <a href="/login" class="btn-purple px-8 py-4 rounded-md text-white font-medium">
                    Get Started
                </a>
                <a href="#features" class="px-8 py-4 rounded-md text-gray-300 border border-gray-800 hover:border-purple-500 transition-colors duration-300">
                    Explore Features
                </a>
            </div>
        </section>
        
        <!-- Features Section -->
        <section id="features" class="mb-24">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="card rounded-lg p-8">
                    <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-6 bg-purple-900/10">
                        <i class="fas fa-bolt text-purple-500"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-3 text-white">Lightning Fast</h3>
                    <p class="text-gray-400 leading-relaxed">
                        Ultra-low latency and superior performance with our optimized infrastructure.
                    </p>
                </div>
                
                <div class="card rounded-lg p-8">
                    <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-6 bg-purple-900/10">
                        <i class="fas fa-shield-alt text-purple-500"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-3 text-white">Enterprise Security</h3>
                    <p class="text-gray-400 leading-relaxed">
                        Advanced DDoS protection and automated backups for maximum security.
                    </p>
                </div>
                
                <div class="card rounded-lg p-8">
                    <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-6 bg-purple-900/10">
                        <i class="fas fa-headset text-purple-500"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-3 text-white">24/7 Expert Support</h3>
                    <p class="text-gray-400 leading-relaxed">
                        Our dedicated team is always ready to help with any questions or issues.
                    </p>
                </div>
            </div>
        </section>
        
        <!-- Stats Section -->
        <section class="card rounded-lg p-8 mb-24 subtle-shadow">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="text-3xl font-bold text-white mb-1">99.9%</div>
                    <div class="text-gray-500 text-sm">Uptime</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white mb-1">24/7</div>
                    <div class="text-gray-500 text-sm">Support</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white mb-1">10K+</div>
                    <div class="text-gray-500 text-sm">Players</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white mb-1">10+</div>
                    <div class="text-gray-500 text-sm">Locations</div>
                </div>
            </div>
        </section>
        
        <!-- CTA Section -->
        <section class="card rounded-lg p-8 subtle-shadow">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6">
                <div>
                    <h3 class="text-2xl font-semibold mb-2 text-white">Ready to start?</h3>
                    <p class="text-gray-400">Create your Minecraft server in minutes.</p>
                </div>
                <a href="/login" class="btn-purple px-8 py-4 rounded-md text-white font-medium whitespace-nowrap">
                    Create Server
                </a>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('components/footer') %>
</body>
</html>