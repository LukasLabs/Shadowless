<!-- index.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= settings.name %></title>
    <link rel="icon" type="image/png" href="https://i.imgur.com/GY3cXet.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.3s ease-out forwards;
        }
        .gradient-text {
            background: linear-gradient(45deg, #3B82F6, #8B5CF6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>
<body class="bg-[#0F0F0F] text-white min-h-screen flex flex-col">
    <!-- Main Content -->
    <main class="p-8 w-full flex-grow">
        <!-- Hero Section -->
        <div class="relative rounded-2xl overflow-hidden mb-8 animate-fade-in">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20 backdrop-blur-sm"></div>
            <div class="relative p-12 text-center">
                <h1 class="text-5xl font-bold mb-4 gradient-text">Welcome to <%= settings.name %></h1>
                <p class="text-xl text-gray-300 mb-8">Your free Minecraft server hosting solution</p>
                <div class="flex justify-center space-x-4">
                    <a href="/login" class="px-8 py-3 rounded-xl bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold transition-all duration-300 shadow-lg hover:shadow-blue-500/20">
                        Get Started
                    </a>
                </div>
            </div>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-300 animate-fade-in">
                <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center mb-4">
                    <i class="fas fa-bolt text-blue-500 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Lightning Fast</h3>
                <p class="text-gray-400">Powered by high-performance hardware for the best gaming experience.</p>
            </div>

            <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-300 animate-fade-in">
                <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center mb-4">
                    <i class="fas fa-shield-alt text-purple-500 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Secure & Reliable</h3>
                <p class="text-gray-400">Enterprise-grade security and 99.9% uptime guarantee.</p>
            </div>

            <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-300 animate-fade-in">
                <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center mb-4">
                    <i class="fas fa-headset text-green-500 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">24/7 Support</h3>
                <p class="text-gray-400">Our team is always here to help you with any issues.</p>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="bg-[#1A1A1A] rounded-xl p-8 mb-8 animate-fade-in">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="text-4xl font-bold text-blue-500 mb-2">99.9%</div>
                    <div class="text-gray-400">Uptime</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-purple-500 mb-2">24/7</div>
                    <div class="text-gray-400">Support</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-green-500 mb-2" id="totalUsers">10+</div>
                    <div class="text-gray-400">Happy Users</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-yellow-500 mb-2" id="totalLocations">3+</div>
                    <div class="text-gray-400">Locations</div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('components/footer') %>
</body>
</html>