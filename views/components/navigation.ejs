<!-- Sidebar -->
<head>
  <link rel="icon" type="image/x-icon" href="https://i.imgur.com/GY3cXet.png">
</head>
<nav class="fixed left-0 top-0 h-screen w-72 bg-[#0F0F0F] border-r border-[#1A1A1A]">
  <div class="flex flex-col h-full">
    <!-- Logo and Brand -->
    <div class="p-6 border-b border-[#1A1A1A]">
      <div class="flex items-center space-x-3">
        <img class="w-8 h-8 rounded-lg" src="<%= settings.logo || '/assets/logo.png' %>" alt="Logo">
        <span class="text-xl font-semibold text-white"><%= settings.name || 'ShadowlessDash' %></span>
      </div>
    </div>

    <!-- User Profile -->
    <div class="p-4 border-b border-[#1A1A1A]">
      <div class="flex items-center space-x-3 p-3 rounded-xl bg-gradient-to-r from-[#1A1A1A] to-[#242424] hover:from-[#242424] hover:to-[#2A2A2A] transition-all duration-300 shadow-lg">
        <% if (req.session && req.session.userinfo) { %>
          <img class="w-10 h-10 rounded-full ring-2 ring-blue-500/20" src="https://cdn.discordapp.com/avatars/<%= req.session.userinfo.id %>/<%= req.session.userinfo.avatar %>.jpg?size=1024" alt="User avatar">
          <div>
            <div class="font-medium text-white"><%= req.session.userinfo.username %></div>
            <div class="text-sm text-gray-400 flex items-center">
              <i class="fas fa-coins text-yellow-500 mr-1"></i>
              <%= coins || 0 %> <%= settings.api?.client?.coins?.name || 'Coins' %>
            </div>
          </div>
        <% } else { %>
          <div class="w-10 h-10 rounded-full ring-2 ring-blue-500/20 bg-[#242424] flex items-center justify-center">
            <i class="fas fa-user text-gray-400"></i>
  </div>
      <div>
            <div class="font-medium text-white">Guest User</div>
            <div class="text-sm text-gray-400 flex items-center">
              <i class="fas fa-coins text-yellow-500 mr-1"></i>
              0 <%= settings.api?.client?.coins?.name || 'Coins' %>
            </div>
          </div>
        <% } %>
      </div>
  </div>

    <!-- Navigation Links -->
    <div class="flex-1 p-4 space-y-2 overflow-y-auto">
      <% if (req.session && req.session.userinfo) { %>
        <a href="/servers/new" class="flex items-center space-x-3 p-3 rounded-xl text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 transition-all duration-300 shadow-lg hover:shadow-blue-500/20">
          <i class="fas fa-plus w-5 h-5"></i>
          <span>Create Server</span>
        </a>

        <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-xl text-gray-300 hover:text-white hover:bg-[#1A1A1A] transition-all duration-300 group">
          <i class="fas fa-home w-5 h-5 group-hover:text-blue-500 transition-colors duration-300"></i>
          <span>Dashboard</span>
        </a>

        <a href="/store" class="flex items-center space-x-3 p-3 rounded-xl text-gray-300 hover:text-white hover:bg-[#1A1A1A] transition-all duration-300 group">
          <i class="fas fa-shopping-cart w-5 h-5 group-hover:text-purple-500 transition-colors duration-300"></i>
          <span>Store</span>
        </a>

        <a href="/profile" class="flex items-center space-x-3 p-3 rounded-xl text-gray-300 hover:text-white hover:bg-[#1A1A1A] transition-all duration-300 group">
          <i class="fas fa-user w-5 h-5 group-hover:text-green-500 transition-colors duration-300"></i>
          <span>Profile</span>
        </a>

        <a href="/earn" class="flex items-center space-x-3 p-3 rounded-xl text-gray-300 hover:text-white hover:bg-[#1A1A1A] transition-all duration-300 group">
          <i class="fas fa-coins w-5 h-5 group-hover:text-yellow-500 transition-colors duration-300"></i>
          <span>Earn</span>
        </a>

        <a href="/security" class="flex items-center space-x-3 p-3 rounded-xl text-gray-300 hover:text-white hover:bg-[#1A1A1A] transition-all duration-300 group">
          <i class="fas fa-shield-alt w-5 h-5 group-hover:text-red-500 transition-colors duration-300"></i>
          <span>Security</span>
        </a>

        <!-- Admin Panel Toggle -->
        <% if (pterodactyl.root_admin == true) { %>
          <div class="relative group">
            <a href="/admin" class="flex items-center space-x-3 p-3 rounded-xl text-gray-300 hover:text-white hover:bg-[#1A1A1A] transition-all duration-300 group">
              <i class="fas fa-crown w-5 h-5 group-hover:text-red-500 transition-colors duration-300"></i>
              <span>Admin Panel</span>
            </a>
            <div class="absolute left-0 mt-2 w-48 bg-[#1A1A1A] rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2">
              <div class="py-1">
                <a href="/admin" class="block px-4 py-2 text-sm text-gray-300 hover:bg-[#2A2A2A] hover:text-white transition-colors duration-200">
                  <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                </a>
                <a href="/admin/users" class="block px-4 py-2 text-sm text-gray-300 hover:bg-[#2A2A2A] hover:text-white transition-colors duration-200">
                  <i class="fas fa-users mr-2"></i>Users
                </a>
                <a href="/admin/servers" class="block px-4 py-2 text-sm text-gray-300 hover:bg-[#2A2A2A] hover:text-white transition-colors duration-200">
                  <i class="fas fa-server mr-2"></i>Servers
                </a>
                <a href="/admin/settings" class="block px-4 py-2 text-sm text-gray-300 hover:bg-[#2A2A2A] hover:text-white transition-colors duration-200">
                  <i class="fas fa-cog mr-2"></i>Settings
                </a>
              </div>
            </div>
</div>
        <% } %>
      <% } else { %>
        <a href="/login" class="flex items-center space-x-3 p-3 rounded-xl text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 transition-all duration-300 shadow-lg hover:shadow-blue-500/20">
          <i class="fas fa-sign-in-alt w-5 h-5"></i>
          <span>Login</span>
        </a>
      <% } %>
    </div>

    <!-- Logout Button -->
    <% if (req.session && req.session.userinfo) { %>
      <div class="p-4 border-t border-[#1A1A1A]">
        <a href="../logout" class="flex items-center space-x-3 p-3 rounded-xl text-red-400 hover:text-red-300 hover:bg-red-500/10 transition-all duration-300 group">
          <i class="fas fa-sign-out-alt w-5 h-5 group-hover:rotate-180 transition-transform duration-300"></i>
          <span>Logout</span>
        </a>
</div>
<% } %>
  </div>
</nav>