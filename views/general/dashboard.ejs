<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title><%= settings.name %></title>
    <link rel="icon" type="image/png" href="https://i.imgur.com/GY3cXet.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.3s ease-out forwards;
        }
    </style>
</head>
<body class="bg-[#0F0F0F] text-white min-h-screen">
    <div class="flex">
        <!-- Sidebar -->
        <%- include('../components/navigation') %>
        
        <!-- Main Content -->
        <main class="flex-1 ml-72 p-8">
            <!-- Welcome Section -->
            <div class="relative rounded-2xl overflow-hidden mb-8 animate-fade-in">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20 backdrop-blur-sm"></div>
                <div class="relative p-8">
                    <h1 class="text-4xl font-bold mb-2">Welcome back, <%= req.session.userinfo.username %>!</h1>
                    <p class="text-gray-400">Manage your servers and resources here.</p>
                </div>
            </div>

            <!-- Alerts -->
            <% if (req.query.err === "CANNOTAFFORDRENEWAL") { %>
            <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-4 mb-6 flex items-center justify-between animate-fade-in">
                <span class="text-red-400">You need at least <%= settings.renewals.cost %> coins to purchase a server renewal!</span>
                <button class="text-red-400 hover:text-red-300">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <% } %>
            
            <% if (req.query.err == 'DELETED') { %>
            <div class="bg-green-500/10 border border-green-500/20 rounded-xl p-4 mb-6 flex items-center justify-between animate-fade-in">
                <span class="text-green-400">Success! Your server has been deleted, feel free to create a new one now!</span>
                <button class="text-green-400 hover:text-green-300">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <% } %>
            
            <% if (req.query.success === 'RENEWED') { %>
            <div class="bg-green-500/10 border border-green-500/20 rounded-xl p-4 mb-6 flex items-center justify-between animate-fade-in">
                <span class="text-green-400">Successfully purchased renewal for server!</span>
                <button class="text-green-400 hover:text-green-300">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <% } %>

            <!-- Announcements -->
            <% if (settings.announcements && settings.announcements.enabled) { %>
            <div class="bg-[#1A1A1A] rounded-xl p-4 mb-6 animate-fade-in">
                <p class="text-gray-300"><%= settings.announcements.message %></p>
            </div>
            <% } %>

            <!-- Resource Stats -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <%
                let ram = 0;
                let disk = 0;
                let cpu = 0;
                let serversUsed = pterodactyl.relationships.servers.data.length;
                
                for (let i = 0, len = pterodactyl.relationships.servers.data.length; i < len; i++) {
                    ram += typeof pterodactyl.relationships.servers.data[i].attributes.limits.memory === "number" ? pterodactyl.relationships.servers.data[i].attributes.limits.memory : 0;
                    disk += typeof pterodactyl.relationships.servers.data[i].attributes.limits.disk === "number" ? pterodactyl.relationships.servers.data[i].attributes.limits.disk : 0;
                    cpu += typeof pterodactyl.relationships.servers.data[i].attributes.limits.cpu === "number" ? pterodactyl.relationships.servers.data[i].attributes.limits.cpu : 0;
                }
                
                const totalServers = (packages ? packages.servers : 0) + extraresources.servers;
                const totalRAM = (packages ? packages.ram : 0) + extraresources.ram;
                const totalDisk = (packages ? packages.disk : 0) + extraresources.disk;
                const totalCPU = (packages ? packages.cpu : 0) + extraresources.cpu;
                
                const serversRemaining = totalServers - serversUsed;
                const availableRAM = totalRAM - ram;
                const availableDisk = totalDisk - disk;
                const availableCPU = totalCPU - cpu;
                
                const getPercentage = (used, total) => Math.min((used / total) * 100, 100);
                const serversPercentage = getPercentage(serversUsed, totalServers);
                const ramPercentage = getPercentage(ram, totalRAM);
                const diskPercentage = getPercentage(disk, totalDisk);
                const cpuPercentage = getPercentage(cpu, totalCPU);
                
                const getBarColor = (percentage) => {
                    if (percentage < 50) return "bg-green-500";
                    if (percentage < 75) return "bg-yellow-500";
                    return "bg-red-500";
                };
                %>

                <!-- Server Slots -->
                <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-200 animate-fade-in">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-server text-blue-500"></i>
                            <span class="text-gray-400">Server Slots</span>
                        </div>
                        <span class="text-2xl font-bold"><%= serversRemaining %></span>
                    </div>
                    <div class="w-full h-2 bg-[#242424] rounded-full overflow-hidden">
                        <div class="h-full transition-all duration-500" data-width="<%= serversPercentage %>" data-color="<%= getBarColor(serversPercentage) %>"></div>
                    </div>
                </div>

                <!-- RAM -->
                <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-200 animate-fade-in">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-memory text-purple-500"></i>
                            <span class="text-gray-400">Available RAM</span>
                        </div>
                        <span class="text-2xl font-bold"><%= (availableRAM / 1024).toFixed(1) %> GB</span>
                    </div>
                    <div class="w-full h-2 bg-[#242424] rounded-full overflow-hidden">
                        <div class="h-full transition-all duration-500" data-width="<%= ramPercentage %>" data-color="<%= getBarColor(ramPercentage) %>"></div>
                    </div>
                </div>

                <!-- CPU -->
                <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-200 animate-fade-in">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-microchip text-green-500"></i>
                            <span class="text-gray-400">Available CPU</span>
                        </div>
                        <span class="text-2xl font-bold"><%= availableCPU %>%</span>
                    </div>
                    <div class="w-full h-2 bg-[#242424] rounded-full overflow-hidden">
                        <div class="h-full transition-all duration-500" data-width="<%= cpuPercentage %>" data-color="<%= getBarColor(cpuPercentage) %>"></div>
                    </div>
                </div>

                <!-- Disk -->
                <div class="bg-[#1A1A1A] rounded-xl p-6 hover:bg-[#242424] transition-all duration-200 animate-fade-in">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-hdd text-yellow-500"></i>
                            <span class="text-gray-400">Available Disk</span>
                        </div>
                        <span class="text-2xl font-bold"><%= (availableDisk / 1024).toFixed(1) %> GB</span>
                    </div>
                    <div class="w-full h-2 bg-[#242424] rounded-full overflow-hidden">
                        <div class="h-full transition-all duration-500" data-width="<%= diskPercentage %>" data-color="<%= getBarColor(diskPercentage) %>"></div>
                    </div>
                </div>
            </div>

            <!-- Servers Section -->
            <div class="mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-bold">Your Servers</h2>
                    <a href="/servers/new" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-all duration-200 flex items-center space-x-2">
                        <i class="fas fa-plus"></i>
                        <span>Create Server</span>
                    </a>
                </div>

                <% if (pterodactyl.relationships.servers.data.length == 0) { %>
                <div class="bg-[#1A1A1A] rounded-xl p-8 text-center animate-fade-in">
                    <img src="/assets/empty.svg" class="w-32 h-32 mx-auto mb-4" alt="No servers">
                    <h3 class="text-xl font-semibold mb-2">No servers yet</h3>
                    <p class="text-gray-400 mb-4">Create your first server to get started!</p>
                    <a href="/servers/new" class="inline-block bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition-all duration-200">
                        Create Server
                    </a>
                </div>
                <% } else { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% for (let i = 0, len = pterodactyl.relationships.servers.data.length; i < len; i++) { %>
                    <div class="bg-[#1A1A1A] rounded-xl overflow-hidden hover:bg-[#242424] transition-all duration-200 animate-fade-in">
                        <div class="relative h-32 bg-gradient-to-r from-blue-600/20 to-purple-600/20">
                            <div class="absolute inset-0 bg-[url('/assets/bgimage.png')] bg-cover bg-center opacity-20"></div>
                            <div class="relative p-4">
                                <h3 class="text-xl font-semibold truncate"><%= pterodactyl.relationships.servers.data[i].attributes.name %></h3>
                                <p class="text-gray-400 text-sm truncate">
                                    <%= pterodactyl.relationships.servers.data[i].attributes.description || "No description" %>
                                </p>
                            </div>
                        </div>
                        <div class="p-4">
                            <div class="grid grid-cols-2 gap-4 mb-4">
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-microchip text-green-500"></i>
                                    <span class="text-sm"><%= pterodactyl.relationships.servers.data[i].attributes.limits.cpu %>% CPU</span>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-memory text-purple-500"></i>
                                    <span class="text-sm"><%= pterodactyl.relationships.servers.data[i].attributes.limits.memory %> MB RAM</span>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-hdd text-yellow-500"></i>
                                    <span class="text-sm"><%= pterodactyl.relationships.servers.data[i].attributes.limits.disk %> MB Disk</span>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <a href="/renew?id=<%= pterodactyl.relationships.servers.data[i].attributes.id %>" 
                                   class="flex-1 bg-blue-500/10 hover:bg-blue-500/20 text-blue-400 px-3 py-2 rounded-lg text-sm text-center transition-all duration-200">
                                    <i class="fas fa-sync-alt mr-1"></i> Renew
                                </a>
                                <a href="/edit?id=<%= pterodactyl.relationships.servers.data[i].attributes.id %>" 
                                   class="flex-1 bg-gray-500/10 hover:bg-gray-500/20 text-gray-400 px-3 py-2 rounded-lg text-sm text-center transition-all duration-200">
                                    <i class="fas fa-edit mr-1"></i> Edit
                                </a>
                                <a href="<%= settings.pterodactyl.domain %>/server/<%= pterodactyl.relationships.servers.data[i].attributes.uuid %>" 
                                   target="_blank" 
                                   class="flex-1 bg-green-500/10 hover:bg-green-500/20 text-green-400 px-3 py-2 rounded-lg text-sm text-center transition-all duration-200">
                                    <i class="fas fa-external-link-alt mr-1"></i> Open
                                </a>
                                <a href="/delete?id=<%= pterodactyl.relationships.servers.data[i].attributes.id %>" 
                                   class="flex-1 bg-red-500/10 hover:bg-red-500/20 text-red-400 px-3 py-2 rounded-lg text-sm text-center transition-all duration-200">
                                    <i class="fas fa-trash-alt mr-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('[data-width]');
            progressBars.forEach(bar => {
                const width = bar.getAttribute('data-width');
                const color = bar.getAttribute('data-color');
                bar.style.width = `${width}%`;
                bar.style.backgroundColor = color;
            });
        });
    </script>
</body>
</html>